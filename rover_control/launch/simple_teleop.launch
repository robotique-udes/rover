<?xml version="1.0"?>

<launch>

    <arg name="joy" default="true"></arg>

    <!-- Launch twist to motor_cmd node -->
    <node pkg="rover_control" name="twist2motor_cmd" type="twist2motor_cmd.py"></node>

    <!-- Launch teleop -->
    <!-- NEEDS TO BE LAST FOR THE KEYBOARD NODE WHICH IS INTERACTIVE -->
    <group if="$(arg joy)">
        <include file="$(find rover_control)/launch/teleop_joystick.launch"></include>
    </group>
    <group unless="$(arg joy)">
        <include file="$(find rover_control)/launch/teleop_keyboard.launch"></include>
    </group>

</launch>
